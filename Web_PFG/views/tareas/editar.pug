extends ../layout/admin

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Back
            span.font-normal Log
        h2.text-center.text-3xl.text-indigo-600.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-indigo-600.text-white.uppercase.text-center.p-2.mb-1.font-bold.rounded-md= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(method= "POST" ).space-y-8
                input(type="hidden" name="_csrf" value= csrfToken)
                .space-y-5 
                    h3.text-leg.leading.uppercase.font-medium.text-gray-900 Informaci칩n General 
                    p.text-gray-600 A침ade la Informaci칩n requerida

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo de la Tarea 
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo" type="text" name="titulo" value= datos.titulo ? datos.titulo : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripci칩n
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion" type="text" name="descripcion" )=value= datos.descripcion ? datos.descripcion : ''


                
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")                         
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="importancia") Valor de Importancia  
                            select#importancia.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="importancia")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 10
                                        option(value=n selected= datos.importancia ? datos.importancia == n ? true : false : null) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estimacion") Estimacion de Tiempo   
                            select#estimacion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estimacion")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 5
                                        option(value=n selected= datos.estimacion ? datos.estimacion == n ? true : false : null) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc") WC  
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 5
                                        option(value=n selected=datos.wc ? datos.wc == n ? true : false :null) #{n++} 

                    Input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar cambios")

